TMP=$(upower -i $(upower -e | grep 'BAT'))

PERCENTAGE=$(echo $TMP | grep percentage | awk 'match($0, /[0-9]+%/) { print substr($0, RSTART, RLENGTH) }')

TEXT_STATUS=$(echo $TMP | grep -E "state:\s+[a-z-]+" -o | awk '{ print $2 }');

case $TEXT_STATUS in
  'charging')
      ICON_STATUS='üîå'
    ;;
  'discharging')
      ICON_STATUS='üíª'
    ;;
  'fully-charged')
      ICON_STATUS='‚úîÔ∏è'
    ;;
  *)
      ICON_STATUS=$TEXT_STATUS;
    ;;
esac

echo "üîã$PERCENTAGE($ICON_STATUS)"
