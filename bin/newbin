#!/usr/bin/env bash

script_name=$1
target_path=~/dotfiles/bin/${script_name}

if [[ -z "${script_name}" ]]; then
  echo "script name not provided"
  exit 0;
fi

if [[ ! -f "${target_path}" ]]; then
  echo Creating "${target_path}"...;
  cp ~/dotfiles/bin/.template "${target_path}";
fi

nvim "${target_path}"
